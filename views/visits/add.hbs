<h1 class="text-center my-5">Rejestracja wizyty</h1>

<div class="container">
  <form action="/visits" method="POST" class="row g-3 mx-auto">

    <div class="mb-3">
      <label for="visitType" class="form-label">Temat wizyty</label>
      <select name="visitType" id="visitType" class="form-select">
        <option value="Tatuaż">Tatuaż</option>
        <option value="Usunięcie tatuażu">Usunięcie tatuażu</option>
        <option value="Konsultacja">Konsultacja</option>
        <option value="Inny">Inny</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="visitDate" class="form-label">Wybierz termin</label>
      <input type="date" id="visitDate" name="visitDate" class="form-control" />
    </div>

    <div class="d-flex justify-content-center align-items-center">
      <div class="col d-grid px-1">
        <a href="/dashboard" class="btn btn-outline-dark">Anuluj</a>
      </div>
      <div class="col d-grid px-1">
        <button type="submit" class="btn btn-primary">Zapisz</button>
      </div>
    </div>
  </form>
</div>